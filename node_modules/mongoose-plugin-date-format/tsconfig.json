{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2015", "es6", "dom"],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,

    "removeComments": true,
    "declaration": true,
    "allowJs": false,
    "outDir": "lib",
    "inlineSourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts"
  ]
}
