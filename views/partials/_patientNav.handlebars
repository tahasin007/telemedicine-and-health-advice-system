<input type="hidden" id="user_name" value="{{userName}}">
<input type="hidden" id="user_id" value="{{id}}">

<nav class="navbar navbar-expand-md navbar-light">
  <button class="navbar-toggler ml-auto mb-2 bg-light" type="button" data-toggle="collapse" data-target="#myNavbar">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="myNavbar">
    <div class="container-fluid">
      <div class="row">
        <!-- sidebar -->
        <div class="col-xl-2 col-lg-3 col-md-4 sidebar fixed-top">
          <div class="bottom-border pb-3">
            {{#if image}}
            <img src="/uploads/{{image}}"  width="50" height="50" class="rounded-circle mr-3">

            {{else}}
            <img src="/images/userProfile.png"  width="50" height="50" class="rounded-circle mr-3">
            {{/if}}

            <b class="text-warning">Patient</b>
          </div>
          <ul class="navbar-nav flex-column mt-4 general-Title5" style="font-size:13px;">
            <!-- <li class="nav-item"><a href="admin.html" class="nav-link text-dark p-3 mb-2 sidebar-link"><i class="fas fa-home text-dark fa-lg mr-3"></i>Dashboard</a></li> -->
            <!-- <li class="nav-item"><a href="patientProfile.html" class="nav-link text-dark p-3 mb-2 sidebar-link"><i class="fas fa-user text-dark fa-lg mr-3"></i>Profile</a></li>
            <li class="nav-item"><a href="patientMail.html" class="nav-link text-dark p-3 mb-2 sidebar-link"><i class="fas fa-envelope text-dark fa-lg mr-3"></i>Send Mail</a></li> -->
            <li class="nav-item"><a href="/patient/{{userName}}/notification" class="nav-link text-dark p-3 mb-2 {{navClass.[0]}}"><i class="fas fa-bell text-dark fa-lg mr-3"></i>Notification</a></li>
            <li class="nav-item"><a href="/patient/{{userName}}/symptompChecker" class="nav-link text-dark p-3 mb-2 {{navClass.[1]}}"><i class="fas fa-briefcase-medical text-dark fa-lg mr-3"></i>Symptom Checker</a></li>
            <li class="nav-item"><a href="/patient/{{userName}}/doctors" class="nav-link text-dark p-3 mb-2 {{navClass.[2]}}"><i class="fa fa-user-md text-dark fa-lg mr-3"></i>Medical Support</a></li>
            <li class="nav-item"><a href="/patient/{{userName}}/report" class="nav-link text-dark p-3 mb-2 {{navClass.[3]}}"><i class="fa fa-file text-dark mr-3"></i></i>Medical Record</a></li>
            <li class="nav-item"><a href="/patient/{{userName}}/chat" class="nav-link text-dark p-3 mb-2 {{navClass.[4]}}"><i class="fas fa-comment mr-3"></i>Message</a></li>
            <li class="nav-item"><a href="/patient/{{userName}}/videoChat" class="nav-link text-dark p-3 mb-2 {{navClass.[5]}}"><i class="fas fa-video mr-3"></i>Video Chat</a></li>


          </ul>
        </div>
        <!-- end of sidebar -->

        <!-- top-nav -->
        <div class="col-xl-10 col-lg-9 col-md-8 bg-light ml-auto back fixed-top py-1 top-navbar">
          <div class="row align-items-center">
            <div class="col-md-4">
              <a href="/patient/{{userName}}" class="nav-link text-dark  p-3 mb-2"><i class="fas fa-home text-info fa-lg mr-1"></i>Home</a>
            </div>
            <div class="col-md-2 ml-auto">
              <ul class="navbar-nav">
                <!-- <li class="nav-item icon-parent"><a href="#" class="nav-link icon-bullet"><i class="fas fa-comments text-muted fa-lg"></i></a></li> -->
                <li class="nav-item dropdown">
                  <a class="nav-link" href="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-user-cog text-info fa-lg mr-1"></i>
                  </a>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="/patient/{{userName}}/patientProfile">Profile</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/patient/{{userName}}/changePassword">Change Password</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/users/logout">Log Out</a>

                    <!-- <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Something else here</a> -->
                  </div>
                </li>

                <li class="nav-item dropdown">
                  <a href="" class="nav-link text-primary"  id="notification-dropdown"  role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-bell text-info fa-lg mr-1"></i></a>

                    <div class="dropdown-menu dropdown-menu-right notification" aria-labelledby="notification-dropdown">
                      <div class="row">
                        <div class="col-md-12">
                          <div class="notification-heading ml-3">Notifications</div>
                        </div>
                      </div>

                      {{#each notification}}
                      <div class="dropdown-divider"></div>
                      <div class="notification-wrapper">
                        <div class="notification-item">
                          <div class="row d-flex">
                            <div class="col-2 col-md-2 col-lg-2">
                              <img src="/images/{{category}}.png"  width="35" height="35" class="rounded-circle">
                            </div>
                            <div class="col-10 col-md-10 col-lg-10">
                              <div class="notification-title">
                                {{title}}
                              </div>
                              <div class="notification-details">
                                {{description}}
                              </div>
                              <div class='notification-date float-right text-secondary'>
                                {{@root.timeDiff time}}
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                      {{/each}}

                      <div class="dropdown-divider"></div>
                      <a href="/patient/{{userName}}/notification" style="text-decoration:none;">
                        <div class="row justify-content-center notification-bottom-msg">
                          View All
                        </div>
                      </a>
                    </div>
                  </li>

                  <li class="nav-item dropdown" id="reload">
                    <a class="nav-link" href="#" id="navbarNotificationDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <i class="fas fa-user-friends text-info fa-lg ml-2"></i>
                      {{#gt friendRequest.totalRequest 0}}
                      <span class="notification-number">{{friendRequest.totalRequest}}
                      </span>
                      {{else}}
                      <span class="notification-number" style="display:none">
                      </span>
                      {{/gt}}
                    </a>



                    <div class="dropdown-menu dropdown-menu-right notification" aria-labelledby="navbarNotificationDropdown">
                      {{#gt friendRequest.totalRequest 0}}
                      <div class="row">
                        <div class="col-md-12">
                          <div class="notification-heading ml-3">New Friend Request</div>
                        </div>
                      </div>
                      <div class="dropdown-divider"></div>
                      {{#each friendRequest.request}}
                      <div class="notification-wrapper">
                        <div class="notification-item">
                          <div class="row">
                            <div class="col-md-3">
                              <img src="/uploads/{{userId.profileImage}}"  width="50" height="50" class="rounded-circle mr-3">
                            </div>
                            <div class="col-md-9 pull-right">
                              <div class="row ml-1 notification-title">
                                {{userId.name}}
                              </div>
                              <input type="hidden" id="senderID" value="{{userId._id}}">
                              <input type="hidden" id="senderNAME" value="{{userId.userName}}">
                              <button type="button" class="btn btn-info" id="accept_request"><i class="fas fa-user-plus mr-1"></i>Accept</button>
                              <button type="button" class="btn btn-danger" id="cancel_request"><i class="fa fa-times mr-1" aria-hidden="true"></i>Cancel</button>
                            </div>
                          </div>
                        </div>
                      </div>
                      {{/each}}
                      {{else}}
                      <div class="row">
                        <div class="col-md-12">
                          <div class="notification-heading ml-3">No Friend Request to Show</div>
                        </div>
                      </div>
                      {{/gt}}

                    </div>

                  </li>

                </ul>
              </div>
            </div>
          </div>
          <!-- end of top-nav -->
        </div>
      </div>
    </div>
  </nav>
