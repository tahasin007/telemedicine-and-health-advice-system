    <section>
      <div class="container-fluid">
        <div class="row">
          <div class="col-xl-10 col-lg-9 col-md-8 ml-auto mt-4">
            <div class="pt-md-5 mt-md-3 mb-5 col-xl-12">
              <h3 class="text-center mb-3">{{day}} Schedule</h3>
              <div class="container col-xl-8 col-md-6 align-items-center">
                <table class="table table-borderless bg-light rounded">
                <thead>
                  <tr>
                    <th scope="col">Start</th>
                    <th scope="col">End</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each timeObj}}
                  <tr>
                    <td><button type="button" class="slotButton disabled">{{start}}</button></td>
                    <td><button type="button" class="slotButton disabled">{{end}}</button></td>
                    
                    <td>
                      {{#eq status 'Free'}}
                      <button type="button" class="slotButtonFree disabled">{{status}}</button>
                      {{/eq}}

                      {{#eq status 'Booked'}}
                      <button type="button" class="slotButtonBook disabled">{{status}}</button>
                      {{/eq}}
                    </td>
                    
                    <td>
                      {{#eq status 'Free'}}
                      <a href="{{dayNo}}/{{@index}}">
                    <button type="button" class="btn btn-success btn-sm rounded">Book</button></a>
                      {{/eq}}

                      {{#eq status 'Booked'}}
                    <button type="button" class="btn btn-warning btn-sm disabled rounded">Book</button>
                      {{/eq}}
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
              </div>
            </div>
         </div>
      </div>
    </div>
    </section>







